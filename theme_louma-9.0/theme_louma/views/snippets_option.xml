        <template id="tab_snippet_structure_louma" inherit_id="website.snippets" name="Tab Snippet Structure Louma">
            <xpath expr='//ul/li/a[@href="#snippet_effect"]' position="after">
                    <li>
                        <a href="#snippet_structure_louma"  class="scroll-link">
                            <span class="fa-stack fa-lg">
                                <i class="fa fa-square fa-stack-2x fa-inverse" style="color:#d3b61c;"></i>
                                <i class="fa fa-paint-brush fa-stack-1x" style="color:#fff;"/>
                            </span>
                        </a>
                    </li>
            </xpath>
			<xpath expr="//div[@id='snippet_effect']" position="after">
                <div id="snippet_structure_louma" class="o_panel">
                    <div class="o_panel_header" style="background-color:#d3b61c;color:#fff;">
                        <span class="fa-stack">
                            <i class="fa fa-paint-brush"></i>
                        </span> Louma
                    </div>
                    <div class="o_panel_body">

                    </div>
                </div>
			</xpath>
        </template>


